<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NoveoNative.SettingsPage"
             Title="Settings"
             BackgroundColor="White">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="25">

            <!-- Avatar Section -->
            <VerticalStackLayout Spacing="10" HorizontalOptions="Center">
                <Border StrokeShape="RoundRectangle 60" HeightRequest="120" WidthRequest="120" Stroke="#3b82f6" StrokeThickness="2">
                    <Image x:Name="AvatarImage" Aspect="AspectFill" BackgroundColor="LightGray"/>
                </Border>
                <Button Text="Change Avatar" Clicked="OnUploadAvatar" FontSize="12" HeightRequest="35" Padding="10,0"/>
            </VerticalStackLayout>

            <!-- Info Section -->
            <VerticalStackLayout Spacing="5">
                <Label Text="Display Name" TextColor="Gray" FontSize="12"/>
                <Border StrokeShape="RoundRectangle 5" Stroke="LightGray" Padding="10,0">
                    <Entry x:Name="UsernameEntry" TextColor="Black" Placeholder="Your Name"/>
                </Border>
                <Button Text="Save Name" Clicked="OnSaveUsername" BackgroundColor="#3b82f6" TextColor="White" Margin="0,10,0,0"/>
            </VerticalStackLayout>

            <BoxView HeightRequest="1" Color="LightGray"/>

            <!-- Danger Zone -->
            <Button Text="Log Out" Clicked="OnLogout" BackgroundColor="#fee2e2" TextColor="Red" BorderColor="Red" BorderWidth="1"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>