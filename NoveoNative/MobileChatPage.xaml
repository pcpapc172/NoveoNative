<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:NoveoNative"
             x:Class="NoveoNative.MobileChatPage"
             NavigationPage.HasNavigationBar="False"
             Shell.NavBarIsVisible="False"
             BackgroundColor="{Binding Source={x:Reference MainChatView}, Path=BindingContext.MainBgColor}">

    <Grid RowDefinitions="Auto,*">
        <!-- Custom Header -->
        <Border Grid.Row="0" BackgroundColor="{Binding Source={x:Reference MainChatView}, Path=BindingContext.HeaderBgColor}" Padding="10" StrokeThickness="0">
            <Grid ColumnDefinitions="Auto,50,*">
                <Button Grid.Column="0" Text="â†" BackgroundColor="Transparent" 
                        TextColor="{Binding Source={x:Reference MainChatView}, Path=BindingContext.TextColor}" FontSize="24" 
                        Clicked="OnBackClicked" WidthRequest="40" HeightRequest="40"/>

                <!-- Avatar -->
                <Border Grid.Column="1" StrokeShape="RoundRectangle 20" 
                        HeightRequest="40" WidthRequest="40" 
                        BackgroundColor="{Binding Source={x:Reference MainChatView}, Path=BindingContext.ChatAvatarBgColor}"
                        StrokeThickness="0" Margin="5,0">
                    <Grid>
                        <Label Text="{Binding Source={x:Reference MainChatView}, Path=BindingContext.ChatAvatarLetter}" 
                               TextColor="White" FontSize="18" FontAttributes="Bold"
                               HorizontalOptions="Center" VerticalOptions="Center"
                               IsVisible="{Binding Source={x:Reference MainChatView}, Path=BindingContext.ShowAvatarLetter}"/>
                        <Image Source="{Binding Source={x:Reference MainChatView}, Path=BindingContext.ChatAvatarUrl}" 
                               Aspect="AspectFill"
                               IsVisible="{Binding Source={x:Reference MainChatView}, Path=BindingContext.ShowAvatarImage}">
                            <Image.Clip>
                                <EllipseGeometry Center="20,20" RadiusX="20" RadiusY="20"/>
                            </Image.Clip>
                        </Image>
                    </Grid>
                </Border>

                <!-- Name and subtitle -->
                <VerticalStackLayout Grid.Column="2" VerticalOptions="Center">
                    <Label Text="{Binding Source={x:Reference MainChatView}, Path=BindingContext.ChatName}" 
                           TextColor="{Binding Source={x:Reference MainChatView}, Path=BindingContext.TextColor}" 
                           FontSize="18" FontAttributes="Bold"/>
                    <Label Text="{Binding Source={x:Reference MainChatView}, Path=BindingContext.ChatSubtitle}" 
                           TextColor="Gray" FontSize="12"
                           IsVisible="{Binding Source={x:Reference MainChatView}, Path=BindingContext.ShowSubtitle}"/>
                </VerticalStackLayout>
            </Grid>
        </Border>

        <local:ChatView x:Name="MainChatView" Grid.Row="1"/>
    </Grid>
</ContentPage>
